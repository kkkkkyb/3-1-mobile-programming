<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="단대"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="30sp"
            android:textColor="@android:color/black" android:textStyle="bold" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"/>
    <TextView
            android:text="학과"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textStyle="bold" android:textColor="@android:color/black" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"/>
    <Spinner
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:id="@+id/spinner" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:background="@color/light_gray"
    />
    <Spinner
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:id="@+id/spinner2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp"
            android:background="@color/light_gray"/>
    <Button
            android:text="조회"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light" android:textSize="24sp" android:textStyle="bold"
            android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="44dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>
    <RadioGroup
            android:layout_width="206dp"
            android:layout_height="196dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner2" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/radioGroup">
        <RadioButton
                android:text="물품"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton" android:textSize="24sp"
                android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/spinner2"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="48dp"/>
        <RadioButton
                android:text="학생"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2" android:textSize="24sp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/radioButton"
                android:layout_marginStart="48dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="48dp"/>
        <RadioButton
                android:text="학생회"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="48dp" android:layout_marginStart="48dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/radioButton2"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>